<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
        {{#each album}}
        <div class="col">
                <div class="card card-spacing">
                    <img class="card-img-top" src={{this.images.0.url}} alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><b>{{this.name}}</b></h5>
                        <a class="btn btn-primary" href=/track/{{this.id}} role="button">View Tracks</a>
                    </div>
                </div>
        </div>
        {{/each}}
    </div>
</div>
